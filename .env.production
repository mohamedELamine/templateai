# ================================
# Production Environment
# ================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING

# ================================
# Service Ports
# ================================
API_GATEWAY_PORT=8000
LANGGRAPH_PORT=8001
AUTOGEN_PORT=8002
CODE_GENERATION_PORT=8003
TESTING_SERVICE_PORT=8004
DATABASE_SERVICE_PORT=8005

# ================================
# Database Configuration
# ⚠️ CHANGE THESE VALUES!
# ================================
POSTGRES_USER=templateai_prod
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=templateai_production
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_POOL_SIZE=50
DATABASE_MAX_OVERFLOW=100

# ================================
# Redis Configuration
# ⚠️ CHANGE THESE VALUES!
# ================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
REDIS_DB=0
REDIS_CACHE_TTL=3600

# ================================
# AI Services API Keys
# ⚠️ ADD YOUR REAL API KEYS!
# ================================
GEMINI_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
GEMINI_MODEL=gemini-2.0-flash

CLAUDE_API_KEY=sk-ant-XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
CLAUDE_MODEL=claude-opus-4-1

GLM_API_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
GLM_MODEL=glm-4

# ================================
# Application Settings
# ================================
MAX_WORKERS=8
TEMPLATE_STORAGE_PATH=/data/templates
TEMPLATE_UPLOAD_SIZE_MB=500
TEMPLATE_RETENTION_DAYS=180

# ================================
# Security Settings
# ⚠️ CHANGE THESE VALUES!
# ================================
JWT_SECRET=CHANGE_THIS_TO_STRONG_SECRET_KEY_MINIMUM_32_CHARS
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ================================
# Performance Settings
# ================================
WORKER_CONCURRENCY=8
BATCH_SIZE=20
CACHE_ENABLED=true

# ================================
# Monitoring & Logging
# ================================
SENTRY_DSN=https://YOUR_SENTRY_DSN
LOG_FORMAT=json
ENABLE_METRICS=true
METRICS_PORT=9090

# ================================
# Production Features
# ================================
ENABLE_HTTPS=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=3600

